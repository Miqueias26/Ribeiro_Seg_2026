{
    "rewrites": [
        {
            "source": "/contato",
            "destination": "/contato.html"
        },
        {
            "source": "/sobre",
            "destination": "/sobre.html"
        },
        {
            "source": "/servicos",
            "destination": "/servicos.html"
        },
        {
            "source": "/privacidade",
            "destination": "/privacidade.html"
        },
        {
            "source": "/qualidade",
            "destination": "/qualidade.html"
        },
        {
            "source": "/parcerias",
            "destination": "/parcerias.html"
        },
        {
            "source": "/responsabilidade",
            "destination": "/responsabilidade.html"
        },
        {
            "source": "/propostacomercial",
            "destination": "/propostacomercial.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        },
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
}
